{
    "manual":
    [
        {
            "header":"cursor commands",
            "content":
            [
                "'&larr;' :move to the left slot",
                "'&rarr;' :move to the right slot",
                "'&uarr;' :move to the end of the previous line",
                "'&darr;' :move to the beginning of the next line",
                "'Home' :move to the beginning of the current line",
                "'End' :move to the end of the current line"
            ]
        },
        {
            "header":"edit commands",
            "content":
            [
                "'Z'~'M' :enter notes",
                "'Shift'+'Z'~'M' :chord mode",
                "'D' :pause",
                "'|' :add a bar manually",
                "'&lt' or '&gt' :tempo(/2 or *2)",
                "'Shift'+'&lt' or '&gt' :add or remove dots",
                "'?' :increase an octave :(C3 to C6)",
                "'\"' :decrease an octave :(C3 to C6)",
                "'Backspace' :delete",
                "']' :add a sharp or remove a flat",
                "'[' :add a flat or remove a sharp",
                "'S' :separate two linked notes",
                "'A' :assemble two adjacent notes",
				"'Enter' :break a line",
                "'+' :add or remove tie",
                "'T': add triplet",
                "'Y': remove triplet",
                "'L': add or remove the music end symbol of current voice",
                "'Ctrl'+'C' :copy",
                "'Ctrl'+'X' :cut",
                "'Ctrl'+'V' :paste",
				"'Ctrl'+'Z' :undo",
				"'Ctrl'+'B' :redo",
				"'Ctrl'+'S' :save sheet"
            ]
        },
        {
            "header":"select commands",
            "content":
            [
                "hold 'Ctrl'+'&larr;''&uarr;''&rarr;''&darr;' :select the notes in path",
                "double press 'Ctrl' :select the current note",
                "'Shift'+click :select the notes between and including the current note and the clicked note",
                "'-' :add or remove slur on selected notes"
            ]
        },
        {
            "header":"copy commands",
            "content":
            [
                "'Shift'+'F' (normal mode) :enter copy/cut mode and record this point as start point",
                "'Shift'+'F' (copy/cut mode) :set this point as end point, copy everything between the points, and end copy/cut mode",
                "'H' (copy/cut mode) :set this point as end point, cut everything between the points, and end copy/cut mode",
                "'F' (copy/cut mode) :cancel copy/cut mode",
                "'G' :paste"
            ]
        },
        {
            "header":"voice commands",
            "content":
            [
                "'W' :insert a voice",
                "'E' :delete current voice (invalid when there's only one voice)",
                "'R' :record current voice as voiceA",
                "'Shift'+'R' :swap with voiceA",
                "'Q' :enter clef mode",
				"'1'~'6' (normal mode) :move cursor to voice 1~6",
				"'1'~'4' (clef mode) :set the clef as (treble alto tenor bass)"
            ]
        }
    ],
    "font":{
        "title":"font-size : ",
        "L":"large",
        "S":"small"
    }
}